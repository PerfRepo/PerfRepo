<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
		 version="2.5">

	<display-name>p-repo</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<!-- new REST api -->
	<servlet>
		<servlet-name>ResteasyFrontApi</servlet-name>
		<servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
		<init-param>
			<param-name>resteasy.servlet.mapping.prefix</param-name>
			<param-value>/rest/json</param-value>
		</init-param>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>org.perfrepo.web.rest.RestApiApplication</param-value>
		</init-param>
		<init-param>
			<param-name>resteasy.providers</param-name>
			<param-value>
				org.perfrepo.web.rest.exception_mapper.NotFoundExceptionMapper,
				org.perfrepo.web.rest.exception_mapper.UnauthorizedExceptionMapper,
				org.perfrepo.web.rest.exception_mapper.ValidationExceptionMapper,
				org.perfrepo.web.rest.exception_mapper.AdapterExceptionMapper
			</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ResteasyFrontApi</servlet-name>
		<url-pattern>/rest/json/*</url-pattern>
	</servlet-mapping>

	<!-- filters for new REST api -->
	<filter>
		<filter-name>RestApiAuthenticationFilter</filter-name>
		<filter-class>org.perfrepo.web.rest.security.RestApiAuthenticationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>RestApiAuthenticationFilter</filter-name>
		<url-pattern>/rest/json/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<!-- Security -->
